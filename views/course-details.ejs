<%- include('partials/header') %>

<section class="course-hero-section" style="background-color: #00338E; color: white; padding: 60px 0;">
    <div class="container">
        
        <div class="course-hero-wrapper" style="display: flex; align-items: center; gap: 50px;">
            
            <div class="course-image" style="flex: 1; min-width: 300px;">
                <img src="<%= course.img %>" 
                     alt="<%= course.title %> cover" 
                     style="width: 100%; height: auto;">
            </div>

            <div class="course-info">
                
                <h1>
                    <%= course.title %>: <br> 
                </h1>
                
                <p>
                    <%= course.description %>
                </p>
                
                </div>
        </div>
    </div>
</section>

<section class="course-details-section">
    <div class="container">
        
        <div class="details-layout">
            
            <div class="course-main-content">
                
                <div class="overview-block">
                    <h2 data-i18n-key="course.overview">Overview</h2>
                    <p>
                        <%= course.overview %>
                    </p>
                </div>

                <div class="learning-block">
                    <h2 data-i18n-key="course.whatYouLearn">What youâ€™ll learn</h2>
                    
                    <ul class="learning-list">
                        <% if (course.whatYouWillLearn && course.whatYouWillLearn.length > 0) { %>
                            <% course.whatYouWillLearn.forEach(item => { %>
                                <li>
                                    <svg class="icon-check" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <polyline points="20 6 9 17 4 12"></polyline>
                                    </svg>
                                    <span><%= item %></span>
                                </li>
                            <% }) %>
                        <% } %>
                    </ul>
                </div>

                <div class="content-block">
                    <h2 data-i18n-key="course.content">Course content</h2>
                    
                    <p>This course includes <%= course.lessons ? course.lessons.length : 0 %> lessons:</p>
                    
                    <ol class="lessons-list">
                        <% if (course.lessons && course.lessons.length > 0) { %>
                            <% course.lessons.forEach(lesson => { %>
                                <li><%= lesson %></li>
                            <% }) %>
                        <% } %>
                    </ol>
                </div>

                <div class="requirements-block">
                    <h2 data-i18n-key="course.requirements">Requirements</h2>
                    
                    <ul class="requirements-list">
                        <% if (course.requirements && course.requirements.length > 0) { %>
                            <% course.requirements.forEach(req => { %>
                                <li><%= req %></li>
                            <% }) %>
                        <% } %>
                    </ul>
                </div>

            </div>

            </div>

            <aside class="course-sidebar">
                
                <div class="enrollment-card">
                    
                    <div class="price-block">
                        <span class="current-price">$<%= course.price %></span>
                        <span class="old-price">$<%= course.oldPrice %></span>
                    </div>

                    <a href="/enroll/<%= course.id %>" class="btn btn-enroll" data-i18n-key="course.enrollBtn">
                        Enroll Now
                    </a>

                    <ul class="course-features-list">
                        
                        <li>
                            <svg class="icon-check" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <polyline points="20 6 9 17 4 12"></polyline>
                            </svg>
                            <span><%= course.duration %> duration</span>
                        </li>

                        <li>
                            <svg class="icon-check" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <polyline points="20 6 9 17 4 12"></polyline>
                            </svg>
                            <span><%= course.level %> level</span>
                        </li>

                        <li>
                            <svg class="icon-check" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <polyline points="20 6 9 17 4 12"></polyline>
                            </svg>
                            <span data-i18n-key="course.certificate">Certificate of completion</span>
                        </li>

                        <li>
                            <svg class="icon-check" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <polyline points="20 6 9 17 4 12"></polyline>
                            </svg>
                            <span>Average rating:<%= course.rating %></span>
                        </li>
                    </ul>

                </div>
            </aside>

        </div>
    </div>
</section>

<%- include('partials/footer') %>